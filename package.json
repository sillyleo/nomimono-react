{
  "name": "nomi",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ship": "turbo run ship",
    "build-token": "turbo run build-token"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "^1.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.2.0"
}
