		"@storybook/addon-docs": "^7.0.2",
		"csstype": "^3.1.2",
		"lodash": "^4.17.21",
		"lucide-react": "^0.130.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.8.0",
		"tailwind-variants": "^0.1.2"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.0.2",
		"@storybook/addon-interactions": "^7.0.2",
		"@storybook/addon-links": "^7.0.2",
		"@storybook/addon-mdx-gfm": "^7.0.2",
