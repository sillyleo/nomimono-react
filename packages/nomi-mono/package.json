		"@storybook/testing-library": "0.1.0",
		"@types/react": "^18.0.32",
		"@types/react-dom": "^18.0.11",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.14",
		"postcss": "^8.4.21",
		"prop-types": "^15.8.1",
		"storybook": "^7.0.2",
		"tailwindcss": "^3.3.1",
		"typescript": "^4.9.5",
		"vite": "^4.2.1"
	}
